<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:sl="http://schemas.android.com/apk/res-auto"
        tools:ignore="missingPrefix"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <com.ssomai.android.scalablelayout.ScalableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                sl:scale_base_width="1440"
                sl:scale_base_height="200">

            <ImageView
                    android:id="@+id/iv_submit"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_check_black_24dp"
                    sl:scale_height="140"
                    sl:scale_left="1250"
                    sl:scale_textsize="80"
                    sl:scale_top="50"
                    sl:scale_width="140"/>

        </com.ssomai.android.scalablelayout.ScalableLayout>

        <com.ssomai.android.scalablelayout.ScalableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                sl:scale_base_width="1440"
                sl:scale_base_height="200">

            <EditText
                    android:id="@+id/et_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:paddingLeft="10dp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:maxLength="30"
                    android:hint="여기에 제목을 적어주세요 (최대 30자)"
                    sl:scale_height="190"
                    sl:scale_left="30"
                    sl:scale_textsize="50"
                    sl:scale_width="1380"/>

        </com.ssomai.android.scalablelayout.ScalableLayout>

        <com.ssomai.android.scalablelayout.ScalableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                sl:scale_base_width="1440"
                sl:scale_base_height="1200">

            <EditText
                    android:id="@+id/et_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:hint="여기에 내용을 적어주세요"
                    android:background="@android:color/transparent"
                    android:gravity="top"
                    android:maxLines="100"
                    sl:scale_height="1200"
                    sl:scale_left="30"
                    sl:scale_textsize="50"
                    sl:scale_width="1380"/>

        </com.ssomai.android.scalablelayout.ScalableLayout>

        <com.ssomai.android.scalablelayout.ScalableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                sl:scale_base_width="1440"
                sl:scale_base_height="650">

            <ImageView
                    android:id="@+id/iv_upload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:background="#EAEAEA"
                    sl:scale_height="130"
                    sl:scale_left="30"
                    sl:scale_top="30"
                    sl:scale_width="300"/>

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/uploadFileList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    sl:scale_height="400"
                    sl:scale_left="30"
                    sl:scale_top="190"
                    sl:scale_width="1380"/>

        </com.ssomai.android.scalablelayout.ScalableLayout>

    </LinearLayout>

</FrameLayout>