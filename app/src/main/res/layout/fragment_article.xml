<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:sl="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:ignore="missingPrefix"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <!-- 2960 -->

            <com.ssomai.android.scalablelayout.ScalableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    sl:scale_base_width="1440"
                    sl:scale_base_height="220">

                <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        sl:scale_height="100"
                        sl:scale_left="50"
                        sl:scale_top="60"
                        sl:scale_textsize="70"
                        sl:scale_width="1340"/>

            </com.ssomai.android.scalablelayout.ScalableLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/tv_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <LinearLayout
                        android:id="@+id/layout_img"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="20dp">

                </LinearLayout>

            </LinearLayout>

            <com.ssomai.android.scalablelayout.ScalableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    sl:scale_base_width="1440"
                    sl:scale_base_height="300">

                <LinearLayout
                        android:id="@+id/layout_thumbs_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        sl:scale_height="300"
                        sl:scale_left="570"
                        sl:scale_top="35"
                        sl:scale_width="300">

                    <com.ssomai.android.scalablelayout.ScalableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            sl:scale_base_width="300"
                            sl:scale_base_height="300">

                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
                                sl:scale_height="120"
                                sl:scale_left="0"
                                sl:scale_top="90"
                                sl:scale_width="120"/>

                        <TextView
                                android:id="@+id/tv_thumbs_up"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5"
                                android:textColor="#000000"
                                sl:scale_height="120"
                                sl:scale_left="120"
                                sl:scale_top="95"
                                sl:scale_textsize="70"
                                sl:scale_width="120"/>

                    </com.ssomai.android.scalablelayout.ScalableLayout>

                </LinearLayout>

            </com.ssomai.android.scalablelayout.ScalableLayout>

            <com.ssomai.android.scalablelayout.ScalableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    sl:scale_base_width="1440"
                    sl:scale_base_height="320">

                <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#000000"
                        android:text="GOOGLE ADMOBS"
                        android:textColor="#FFFFFF"
                        sl:scale_height="320"
                        sl:scale_textsize="100"
                        sl:scale_width="1440">

                </Button>

            </com.ssomai.android.scalablelayout.ScalableLayout>

            <com.ssomai.android.scalablelayout.ScalableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    sl:scale_base_width="1440"
                    sl:scale_base_height="320">

                <EditText
                        android:id="@+id/et_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        sl:scale_height="150"
                        sl:scale_left="50"
                        sl:scale_top="60"
                        sl:scale_textsize="60"
                        sl:scale_width="1000"/>

                <Button
                        android:id="@+id/btn_submit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="등록"
                        sl:scale_height="150"
                        sl:scale_left="1050"
                        sl:scale_top="60"
                        sl:scale_textsize="60"
                        sl:scale_width="300"/>

            </com.ssomai.android.scalablelayout.ScalableLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants">

                <android.support.v7.widget.RecyclerView
                        android:id="@+id/commentList"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="50dp"
                        android:nestedScrollingEnabled="false"/>

            </RelativeLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</FrameLayout>
