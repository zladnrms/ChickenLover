<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:sl="http://schemas.android.com/apk/res-auto"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:ignore="missingPrefix"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            sl:scale_base_width="2960"
            sl:scale_base_height="1440">

        <!-- toolbar -->
        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:theme="@style/Toolbar">

            <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/app_chicken_info_title"
                    android:textColor="#000000"
                    android:textSize="18sp"/>

        </android.support.v7.widget.Toolbar>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                sl:scale_base_width="1440"
                sl:scale_base_height="2960">

            <com.ssomai.android.scalablelayout.ScalableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    sl:scale_base_width="1440"
                    sl:scale_base_height="2960">

                <android.support.v7.widget.CardView
                        android:id="@+id/favorite_type_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:cardUseCompatPadding="true"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="1.5dp"
                        app:cardMaxElevation="2.5dp"
                        sl:scale_height="500"
                        sl:scale_left="60"
                        sl:scale_top="20"
                        sl:scale_width="1320">

                    <com.ssomai.android.scalablelayout.ScalableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            sl:scale_base_width="500"
                            sl:scale_base_height="1320">

                        <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ㅇㅇ"
                                sl:scale_height="600"
                                sl:scale_textsize="50"
                                sl:scale_width="1320"/>

                        <TextView
                                android:id="@+id/tv_brand"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ㅇㅇ"
                                sl:scale_height="600"
                                sl:scale_top="50"
                                sl:scale_textsize="50"
                                sl:scale_width="1320"/>

                        <TextView
                                android:id="@+id/tv_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                sl:scale_height="600"
                                android:text="ㅇㅇ"
                                sl:scale_top="100"
                                sl:scale_textsize="50"
                                sl:scale_width="1320"/>

                    </com.ssomai.android.scalablelayout.ScalableLayout>

                </android.support.v7.widget.CardView>

            </com.ssomai.android.scalablelayout.ScalableLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>