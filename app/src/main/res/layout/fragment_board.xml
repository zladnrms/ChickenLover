<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:ignore="missingPrefix"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.constraint.Guideline
            android:id="@+id/guideline_left"
            app:layout_constraintGuide_begin="15dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <android.support.constraint.Guideline
            android:id="@+id/guideline_right"
            app:layout_constraintGuide_end="15dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/iv_logo"
            app:layout_constraintStart_toStartOf="@+id/guideline_left"
            app:layout_constraintEnd_toStartOf="@+id/guideline_right"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:background="@drawable/round_corner_background2">

        <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="게시글 검색"
                android:textSize="14sp"
                android:textColor="#ADADAD"
                android:gravity="center_vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@id/iv_search"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
                android:id="@+id/iv_search"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_search_gray_24dp"
                android:gravity="center_vertical"
                app:layout_constraintBaseline_toBaselineOf="@id/layout_search"
                app:layout_constraintRight_toRightOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <ImageView
            android:id="@+id/iv_write"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_create_black_24dp"
            app:layout_constraintTop_toBottomOf="@id/layout_search"
            app:layout_constraintEnd_toStartOf="@+id/guideline_right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/articleList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/iv_write"
            app:layout_constraintBottom_toTopOf="@id/layout_board_previous"/>

    <LinearLayout
            android:id="@+id/layout_board_previous"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/layout_board_next"
            android:gravity="center">

        <ImageView
                android:id="@+id/iv_board_previous"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_keyboard_arrow_left_black_24dp"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/layout_board_next"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/layout_board_previous"
            android:gravity="center">

        <ImageView
                android:id="@+id/iv_board_next"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>