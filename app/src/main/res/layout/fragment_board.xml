<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:sl="http://schemas.android.com/apk/res-auto"
        tools:ignore="missingPrefix"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#FFFFFF">

        <com.ssomai.android.scalablelayout.ScalableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                sl:scale_base_width="1440"
                sl:scale_base_height="2960">

            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_search_black_24dp"
                    sl:scale_height="140"
                    sl:scale_left="1090"
                    sl:scale_textsize="80"
                    sl:scale_top="50"
                    sl:scale_width="140"/>

            <ImageView
                    android:id="@+id/iv_write"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_create_black_24dp"
                    sl:scale_height="140"
                    sl:scale_left="1250"
                    sl:scale_textsize="80"
                    sl:scale_top="50"
                    sl:scale_width="140"/>

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/articleList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    sl:scale_height="1500"
                    sl:scale_left="50"
                    sl:scale_textsize="50"
                    sl:scale_top="350"
                    sl:scale_width="1340"
            />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    sl:scale_height="150"
                    sl:scale_left="50"
                    sl:scale_textsize="50"
                    sl:scale_top="1900"
                    sl:scale_width="1340">

                <ImageView
                        android:id="@+id/iv_board_previous"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_keyboard_arrow_left_black_24dp"/>

                <LinearLayout
                        android:id="@+id/layout_board_paging"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                </LinearLayout>

                <ImageView
                        android:id="@+id/iv_board_next"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>

            </LinearLayout>

        </com.ssomai.android.scalablelayout.ScalableLayout>

    </LinearLayout>

</FrameLayout>