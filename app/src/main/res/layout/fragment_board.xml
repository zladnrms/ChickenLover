<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:ignore="missingPrefix"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/iv_search"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/ic_search_black_24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/iv_write"
            android:layout_marginRight="8dp"/>

    <ImageView
            android:id="@+id/iv_write"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/ic_create_black_24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/articleList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/iv_write"
            app:layout_constraintBottom_toTopOf="@id/layout_board_previous"/>

    <LinearLayout
            android:id="@+id/layout_board_previous"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/layout_board_next"
            android:gravity="center">

        <ImageView
                android:id="@+id/iv_board_previous"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_keyboard_arrow_left_black_24dp"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/layout_board_next"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/layout_board_previous"
            android:gravity="center">

        <ImageView
                android:id="@+id/iv_board_next"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>

