<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:civ="http://schemas.android.com/apk/res-auto"
        xmlns:sl="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:ignore="missingPrefix"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            sl:scale_base_width="1440"
            sl:scale_base_height="2960">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            <com.ssomai.android.scalablelayout.ScalableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    sl:scale_base_width="1440"
                    sl:scale_base_height="2960">

                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_person_black_24dp"
                        civ:civ_border_width="1dp"
                        civ:civ_border_color="#FF000000"
                        sl:scale_height="240"
                        sl:scale_left="60"
                        sl:scale_top="60"
                        sl:scale_width="240"/>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        sl:scale_height="240"
                        sl:scale_left="360"
                        sl:scale_top="60"
                        sl:scale_width="1040">

                    <com.ssomai.android.scalablelayout.ScalableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            sl:scale_base_width="1040"
                            sl:scale_base_height="360">

                        <TextView
                                android:id="@+id/profile_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="GUEST13513(손님)"
                                sl:scale_height="100"
                                sl:scale_textsize="70"
                                sl:scale_width="1000"/>

                        <TextView
                                android:id="@+id/profile_point"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="포인트 10점"
                                sl:scale_height="70"
                                sl:scale_textsize="60"
                                sl:scale_top="140"
                                sl:scale_width="1000"/>

                    </com.ssomai.android.scalablelayout.ScalableLayout>

                </LinearLayout>


                <android.support.v7.widget.CardView
                        android:id="@+id/profile_go_select_fb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:cardUseCompatPadding="true"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="1.5dp"
                        sl:scale_height="140"
                        sl:scale_left="50"
                        sl:scale_top="350"
                        sl:scale_width="1340">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/home_go_select_fb"
                            android:textColor="#000000"
                            android:textSize="13sp"
                            android:layout_gravity="center"
                            android:gravity="center"/>

                    <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="right|center"
                            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                            android:layout_marginRight="10dp"/>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                        android:id="@+id/profile_go_select_ft"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:cardUseCompatPadding="true"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="1.5dp"
                        sl:scale_height="140"
                        sl:scale_left="50"
                        sl:scale_top="490"
                        sl:scale_width="1340">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/home_go_select_ft"
                            android:textColor="#000000"
                            android:textSize="13sp"
                            android:layout_gravity="center"
                            android:gravity="center"/>

                    <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="right|center"
                            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                            android:layout_marginRight="10dp"/>

                </android.support.v7.widget.CardView>


            </com.ssomai.android.scalablelayout.ScalableLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>