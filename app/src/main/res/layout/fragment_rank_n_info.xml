<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:sl="http://schemas.android.com/apk/res-auto"
        tools:ignore="missingPrefix"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#FFFFFF">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                <com.ssomai.android.scalablelayout.ScalableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        sl:scale_base_width="720"
                        sl:scale_base_height="600">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="치킨 순위"
                            sl:scale_textsize="60"
                            sl:scale_height="100"
                            sl:scale_top="30"
                            sl:scale_width="720"/>

                    <android.support.v7.widget.RecyclerView
                            android:id="@+id/chickenRankList"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            sl:scale_height="440"
                            sl:scale_textsize="50"
                            sl:scale_top="150"
                            sl:scale_width="720"
                    />

                </com.ssomai.android.scalablelayout.ScalableLayout>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                <com.ssomai.android.scalablelayout.ScalableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        sl:scale_base_width="720"
                        sl:scale_base_height="600">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="포인트 순위"
                            sl:scale_textsize="60"
                            sl:scale_height="540"
                            sl:scale_top="30"
                            sl:scale_width="720"/>

                    <android.support.v7.widget.RecyclerView
                            android:id="@+id/pointRankList"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            sl:scale_height="440"
                            sl:scale_textsize="50"
                            sl:scale_top="150"
                            sl:scale_width="720"/>

                </com.ssomai.android.scalablelayout.ScalableLayout>

            </LinearLayout>

        </LinearLayout>

        <com.ssomai.android.scalablelayout.ScalableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                sl:scale_base_width="1440"
                sl:scale_base_height="220">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="치킨 할인정보"
                    sl:scale_textsize="60"
                    sl:scale_height="200"
                    sl:scale_top="10"
                    sl:scale_width="720"/>

        </com.ssomai.android.scalablelayout.ScalableLayout>

    </LinearLayout>

</FrameLayout>