<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:sl="http://schemas.android.com/apk/res-auto"
        tools:ignore="missingPrefix"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#EFEFEF">

        <!-- toolbar -->
        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:theme="@style/Toolbar">

            <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/join"
                    android:textColor="#000000"
                    android:textSize="18sp"/>

        </android.support.v7.widget.Toolbar>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

        </LinearLayout>

        <com.ssomai.android.scalablelayout.ScalableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                sl:scale_base_width="1440"
                sl:scale_base_height="160">

            <EditText
                    android:id="@+id/et_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:paddingLeft="10dp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:maxLength="30"
                    android:hint="아이디를 입력해주세요"
                    sl:scale_height="150"
                    sl:scale_left="220"
                    sl:scale_textsize="50"
                    sl:scale_width="1000"/>

        </com.ssomai.android.scalablelayout.ScalableLayout>

        <com.ssomai.android.scalablelayout.ScalableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                sl:scale_base_width="1440"
                sl:scale_base_height="200">

            <EditText
                    android:id="@+id/et_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:paddingLeft="10dp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:maxLength="15"
                    android:inputType="textPassword"
                    android:hint="패스워드를 입력해주세요"
                    sl:scale_height="150"
                    sl:scale_top="50"
                    sl:scale_left="220"
                    sl:scale_textsize="50"
                    sl:scale_width="1000"/>

        </com.ssomai.android.scalablelayout.ScalableLayout>

        <com.ssomai.android.scalablelayout.ScalableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                sl:scale_base_width="1440"
                sl:scale_base_height="200">

            <EditText
                    android:id="@+id/et_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:paddingLeft="10dp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:maxLength="10"
                    android:hint="별명을 입력해주세요"
                    sl:scale_height="150"
                    sl:scale_top="50"
                    sl:scale_left="220"
                    sl:scale_textsize="50"
                    sl:scale_width="1000"/>

        </com.ssomai.android.scalablelayout.ScalableLayout>

        <com.ssomai.android.scalablelayout.ScalableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                sl:scale_base_width="1440"
                sl:scale_base_height="300">

            <Button
                    android:id="@+id/btn_join"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="가입하기"
                    sl:scale_height="150"
                    sl:scale_top="100"
                    sl:scale_left="470"
                    sl:scale_textsize="50"
                    sl:scale_width="500"/>

        </com.ssomai.android.scalablelayout.ScalableLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

        </LinearLayout>

        <com.ssomai.android.scalablelayout.ScalableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                sl:scale_base_width="1440"
                sl:scale_base_height="150">

            <Button
                    android:id="@+id/btn_go_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="이미 아이디가 있어요!"
                    sl:scale_height="170"
                    sl:scale_textsize="54"
                    sl:scale_width="1440"/>

        </com.ssomai.android.scalablelayout.ScalableLayout>


    </LinearLayout>

</FrameLayout>